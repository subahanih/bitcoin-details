<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">
	<defaultCache eternal="true" maxElementsInMemory="100" overflowToDisk="false" />
	
	<cache name="supportedCurrencies" maxElementsInMemory="10000" eternal="true" overflowToDisk="false" />
	<cache name="validCurrency" maxElementsInMemory="100" eternal="true" overflowToDisk="false" />
	<cache name="currentBitcoinRate" maxElementsInMemory="100" eternal="true" overflowToDisk="false" />
	<cache name="highestBitcoinRate" maxElementsInMemory="100" eternal="true" overflowToDisk="false" />
	<cache name="lowestBitcoinRate" maxElementsInMemory="100" eternal="true" overflowToDisk="false" />

</ehcache>